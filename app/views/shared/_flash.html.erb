<% if flash[:alert_title] %>
  <div
    role="alert"
    class="
      absolute
      top-10
      left-0
      self-start
      flex
      items-center
      gap-2
      mb-4
      p-4
      w-full
      max-w-sm

      <% if flash[:alert_type] == "error" %>
      bg-red-200
      dark:bg-red-900
      border-red-600
      text-red-800
      dark:text-red-50
      <% end %>
      <% if flash[:alert_type] == "success" %>
      bg-teal-200
      dark:bg-teal-900
      border-teal-600
      text-teal-800
      dark:text-teal-50
      <% end %>
      <% if flash[:alert_type] == "info" %>
      bg-blue-200
      dark:bg-blue-900
      border-blue-600
      text-blue-800
      dark:text-blue-50
      <% end %>

      border-l-4
      rounded
      z-50
    "
  >
    <div>
      <strong class="block font-semibold text-[1.05rem]">
        <%= flash[:alert_title] %>
      </strong>

      <p class="text-sm opacity-90">
        <%= flash[:alert_message] %>
      </p>
    </div>

    <button
      type="button"
      data-dismiss="alert"
      aria-label="Close"
      class="
        dark:text-gray-100
        focus-visible:outline-2
        focus-visible:outline-dashed
        focus-visible:outline-current
      "
      onclick="this.parentElement.remove()"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-6 w-6"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
      >
        <path
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"
        />
      </svg>
    </button>
  </div>
<% end %>
